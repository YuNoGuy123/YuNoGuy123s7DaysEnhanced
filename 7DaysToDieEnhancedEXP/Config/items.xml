<configs>

<append xpath="/items">
<item name="ammo762mmBulletexplode">
<property name="Tags" value="ammo"/>
<property name="DisplayType" value="ammoBullet"/>
<property name="HoldType" value="45"/>
<property name="Meshfile" value="Items/Misc/sackPrefab"/>
<property name="DropMeshfile" value="Items/Misc/sack_droppedPrefab"/>
<property name="Material" value="Mbrass"/>
<property name="Stacknumber" value="125"/> <!-- STK ammo -->
<property name="EconomicValue" value="50"/>
<property name="Group" value="Ammo/Weapons"/>
<property class="Action1">
<property name="Class" value="Projectile"/>
	<property name="Gravity" value="-6"/>
	<property name="Explosion.ParticleIndex" value="5"/> <!-- which Prefab/particle is used -->
	<property name="Explosion.RadiusBlocks" value="2"/> <!-- damage radius for blocks -->
	<property name="Explosion.RadiusEntities" value="6"/> <!-- damage radius for entities -->
	<property name="Explosion.DamageBonus.water" value="0"/>
		<property name="Explosion.BlockDamage" value="2500"/> <!-- workaround, not affected by perks at all -->
		<property name="Explosion.EntityDamage" value="442"/>
				<property name="FlyTime" value=".2"/>
		<property name="LifeTime" value="20"/>
</property>
<effect_group name="ammo762mmBulletexplode" tiered="false">
	<passive_effect name="EntityDamage" operation="base_set" value="25"/><display_value name="dExDamageEntity" value="420"/>
	<passive_effect name="BlockDamage" operation="base_set" value="7"/><display_value name="dExDamageBlock" value="2"/>
	<passive_effect name="ProjectileVelocity" operation="base_set" value="60"/>
	<display_value name="ExRadius" value="6"/>
</effect_group>
</item>
</append>





<!-- Make drinks stack to 50 -->
<setattribute xpath="/items/item[starts-with(@name, 'drink') or starts-with(@name, 'food') and not(starts-with(@name, 'foodCrop')) and not(starts-with(@name, 'foodRaw'))]/property[@name='Stacknumber']" name="value">50</setattribute>
<setattribute xpath="/items/item[@name='foodEgg']/property[@name='Stacknumber']" name="value">125</setattribute>
<setattribute xpath="/items/item[@name='foodRottingFlesh']/property[@name='Stacknumber']" name="value">125</setattribute>
<setattribute xpath="/items/item[@name='foodCornMeal']/property[@name='Stacknumber']" name="value">125</setattribute>
<!-- hopefully this works -->
<setattribute xpath="/items/item[starts-with(@name, 'gunRifle')]/property[@class='Action0']/property[@name='Magazine_items']" name="value">ammo762mmBulletBall,ammo762mmBulletHP,ammo762mmBulletAP,ammo762mmBulletexplode</setattribute>
</configs>